{
  "name": "@strong-roots-capital/stream-days",
  "version": "1.0.1",
  "description": "Create a Readable stream of Date objects separated by one day",
  "main": "dist/stream-days.js",
  "types": "dist/stream-days.d.ts",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc",
    "clean": "rm -rf  dist",
    "ava": "ava -s -v",
    "ava:fail-fast": "ava -s -v --fail-fast",
    "watch:ava": "nodemon -e 'ts json' -x 'npm run ava || true'",
    "watch:ava:fail-fast": "nodemon -e 'ts json' -x 'npm run ava:fail-fast || true'",
    "test": "nyc ava",
    "test:tap": "nyc ava --tap | tap-nyc",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "watch:test": "nodemon -e 'ts json' -x 'npm test || true'",
    "typedoc": "typedoc",
    "push-with-tags": "git push origin master && git push origin --tags",
    "push-and-publish": "npm run push-with-tags && npm publish"
  },
  "files": [
    "dist/"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run typedoc && git add doc && (git commit -m 'Update documentation' || true)"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strong-roots-capital/stream-days.git"
  },
  "keywords": [
    "readable",
    "stream",
    "dates",
    "day"
  ],
  "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/strong-roots-capital)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strong-roots-capital/stream-days/issues"
  },
  "homepage": "https://github.com/strong-roots-capital/stream-days",
  "dependencies": {
    "@hamroctopus/utc-date": "^1.0.5",
    "@types/readable-stream": "^2.3.0",
    "debug": "^4.1.1",
    "moment": "^2.24.0",
    "ow": "^0.12.0",
    "readable-stream": "^3.1.1",
    "supports-color": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@sindresorhus/is": "^0.15.0",
    "ava": "^1.0.0",
    "codecov": "^3.1.0",
    "husky": "^1.3.1",
    "nyc": "^13.1.0",
    "tap-nyc": "^1.0.3",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.20",
    "typescript": "^3.2.2"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "!dist/**/*.d.ts",
      "test/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
